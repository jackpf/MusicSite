{% extends "MusicBundle:Music:base.html.twig" %}

{% trans_default_domain 'FOSUserBundle' %}

{% block title %} | Login{% endblock %}

{% block content %}
    <div class="col-xs-10 col-md-6 fos_user_content centered">
        {% if error %}
            <div>{{ error|trans }}</div>
        {% endif %}

        <form action="{{ path("fos_user_security_check") }}" method="post">
            <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />

            <label for="username">{{ 'security.login.username'|trans }}</label>
            <input type="text" id="username" name="_username" value="{{ last_username }}" required="required" /><br />

            <label for="password">{{ 'security.login.password'|trans }}</label>
            <input type="password" id="password" name="_password" required="required" /><br />

            <input type="checkbox" id="remember_me" name="_remember_me" value="on" />
            <label for="remember_me">{{ 'security.login.remember_me'|trans }}</label><br />

            <div class="submit">
                <input type="submit" id="_submit" name="_submit" value="{{ 'security.login.submit'|trans }}" />
            </div>

            <br />
            <a href="{{ path('fos_user_resetting_request') }}">Durrr I forgot my passwerd</a>
        </form>
    </div>
{% endblock %}