<?xml version="1.0" encoding="UTF-8"?>

<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                                      http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd"
                  xmlns:gedmo="http://gediminasm.org/schemas/orm/doctrine-extensions-mapping">

    <entity name="MusicBundle\Entity\VideoFile" table="files">
        <one-to-one target-entity="MusicBundle\Entity\VideoCastItem" field="mediaItem" />
        <field name="iconPath" column="icon_path" nullable="true" />
        <field name="processedPath" column="processed_path" nullable="true" />
        <field name="audioPath" column="audio_path" nullable="true" />
    </entity>
</doctrine-mapping>